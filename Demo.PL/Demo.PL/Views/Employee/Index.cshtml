
@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<EmployeeViewModel>

<h1>All Employees</h1>

<br />
<a asp-action="Create" class="btn btn-primary">Create New Employee</a>

<br />
<br />
<form class="my-3" asp-action="Index" asp-controller="Employee">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search By Name" name="SearchByName" class="form-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success btn-block" />

        </div>

    </div>
    <br />
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search By Department Id" name="SearchByDeptId" class="form-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success btn-block" />

        </div>

    </div>
</form>


@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(emp=>emp.Name)</th>
                <th>@Html.DisplayNameFor(emp=>emp.Image)</th>

                <th>@Html.DisplayNameFor(emp=>emp.Address)</th>
                <th>@Html.DisplayNameFor(emp=>emp.Email)</th>
                <th>@Html.DisplayNameFor(emp=>emp.Salary)</th>
                <th>@Html.DisplayNameFor(emp=>emp.HireDate)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>


                    <td>@Html.DisplayFor(emp=>item.Name)</td>
                    <td>
                        <img src="~/Files/ImagesStore/@item.ImgUrl" class="img-circle" height="40" width="40" alt="@item.Name">
                    </td>

                    <td>@Html.DisplayFor(emp=>item.Address)</td>
                    <td>@Html.DisplayFor(emp=>item.Email)</td>
                    <td>@Html.DisplayFor(emp=>item.Salary)</td>
                    <td>@Html.DisplayFor(emp=>item.HireDate.Day)-@Html.DisplayNameFor(emp=>item.HireDate.Month)-@Html.DisplayNameFor(emp=>item.HireDate.Year)</td>


                    <td>
                        <a class="btn btn-success" asp-controller="Employee" asp-action="Details" asp-route-id="@item.Id">
                            <i class="fas fa-eye"></i>Details
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Employee" asp-action="Update" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>Update
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i>Delete
                        </a>
                    </td>


                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="alert alert-warning">
        <h3>No Employees Found !!</h3>
    </div>
}


